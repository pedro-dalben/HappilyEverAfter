<!-- HERO SECTION: White background, dynamic carousel images, top/bottom flowers -->
<section class="relative h-screen overflow-hidden bg-white">
  <!-- TOP FLOWERS, centered, pointer-events-none to avoid blocking clicks -->
  <div class="absolute top-0 left-0 z-20 flex justify-center w-full pointer-events-none">
    <%= image_tag "flores.png",
      alt: "Flores superiores",
      class: "w-full md:w-auto h-auto object-contain max-h-32 md:max-h-60" %>
  </div>
  <!-- Carousel Background (using images from app/assets/images/carrosel) -->
  <div class="absolute inset-0 z-0">
    <div class="relative h-full carousel">
      <% @carousel_images.each_with_index do |image, i| %>
        <!-- Each Slide -->
        <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out carousel-item <%= i.zero? ? '' : 'opacity-0' %>">
          <%= image_tag "carrosel/#{image}", alt: "Slide #{i+1}", class: "object-cover w-full h-full" %>
        </div>
      <% end %>
    </div>
    <!-- Dark overlay for contrast -->
    <div class="absolute inset-0 z-10 bg-black opacity-50"></div>
  </div>
  <!-- Overlay Title Content (above overlay & flowers) -->
  <div class="relative z-30 flex flex-col items-center justify-center h-full px-4 text-center"
       data-aos="fade-up" data-aos-duration="1000">
    <h1 class="text-5xl font-extrabold text-white md:text-7xl">Pedro &amp; Giovana</h1>
    <p class="mt-4 text-xl text-gray-200 md:text-2xl">Um amor infinito, uma celebração única</p>
  </div>
  <!-- BOTTOM FLOWERS -->
  <div class="absolute bottom-0 left-0 z-20 flex justify-center w-full pointer-events-none">
    <%= image_tag "flores.png",
      alt: "Flores inferiores",
      class: "w-full md:w-auto h-auto object-contain max-h-32 md:max-h-60" %>
  </div>
</section>
