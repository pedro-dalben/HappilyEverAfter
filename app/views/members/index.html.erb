<div class="p-6 bg-white rounded-lg shadow-md">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-bold text-gray-800">Members of <%= @family.name %></h1>
    <%= link_to "Add Member", new_family_member_path(@family), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 shadow-md" %>
  </div>

  <table class="w-full overflow-hidden border border-gray-300 rounded-lg">
    <thead class="bg-gray-200">
      <tr>
        <th class="px-4 py-3 text-sm font-medium text-left text-gray-600">Name</th>
        <th class="px-4 py-3 text-sm font-medium text-left text-gray-600">Age</th>
        <th class="px-4 py-3 text-sm font-medium text-left text-gray-600">Gender</th>
        <th class="px-4 py-3 text-sm font-medium text-gray-600">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100">
      <% @members.each do |member| %>
        <tr class="transition duration-200 hover:bg-gray-100">
          <td class="px-4 py-3 text-gray-700"><%= member.name %></td>
          <td class="px-4 py-3 text-gray-700"><%= member.age %></td>
          <td class="px-4 py-3 text-gray-700"><%= member.gender %></td>
          <td class="px-4 py-3 space-x-2 text-right">
            <%= link_to "Edit", edit_family_member_path(@family, member), class: "bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600" %>
            <%= link_to "Delete", family_member_path(@family, member),
                data: { controller: "delete", delete_url_value: family_member_path(@family, member), action: "click->delete#confirm" },
                class: "bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
