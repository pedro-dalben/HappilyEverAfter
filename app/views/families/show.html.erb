<div class="container py-8 mx-auto">
  <h1 class="mb-4 text-3xl font-bold"><%= @family.name %></h1>
  <p class="mb-2"><strong>Phone:</strong> <%= @family.phone %></p>

  <div class="mt-4">
    <%= link_to "Edit", edit_family_path(@family), class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
    <%= link_to "Delete", family_path(@family), method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 ml-2" %>
    <%= link_to "Back", families_path, class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 ml-2" %>
  </div>
</div>
